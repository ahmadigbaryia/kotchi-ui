{
	"name": "kotchi-ui",
	"version": "1.0.0",
	"description": "UI Kit of native web components",
	"main": "kotchi-ui.js",
	"scripts": {
		"build": "webpack --config webpack.prod.js",
		"build-w-docs": "webpack --config webpack.prod.js && npm run build-docs",
		"build-dev": "webpack --config webpack.dev.js",
		"build-dev-w-docs": "webpack --config webpack.dev.js && npm run build-docs",
		"start": "webpack-dev-server --open --config webpack.dev.js",
		"build-docs": "docs-builder --projectName \"Kotchi UI\" --scriptPath \"dist/kotchi-ui.js\"",
		"prepack": "node .build/prepack.js",
		"postpack": "node .build/postpack.js",
		"test": "jest --env=jest-environment-happy-dom -i",
		"create-component": "node cli/createComponent.js"
	},
	"author": "Ahmad Igbariya <ahmad.rida.igbariya@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.9.0",
		"@babel/plugin-proposal-class-properties": "^7.8.3",
		"@babel/plugin-proposal-decorators": "^7.8.3",
		"@babel/plugin-proposal-object-rest-spread": "^7.9.5",
		"@babel/preset-env": "^7.9.5",
		"@webcomponents/webcomponentsjs": "^2.4.0",
		"babel-eslint": "^10.1.0",
		"babel-jest": "^24.9.0",
		"babel-loader": "^8.1.0",
		"babel-plugin-js-logger": "^1.0.17",
		"clean-webpack-plugin": "^3.0.0",
		"css-loader": "^3.5.2",
		"css-to-string-loader": "^0.1.3",
		"eslint": "^6.8.0",
		"eslint-plugin-node": "^10.0.0",
		"documentation-builder": "^1.0.0",
		"fs-extra": "^8.1.0",
		"handlebars": "^4.7.6",
		"happy-dom": "^0.10.5",
		"html-loader": "^1.1.0",
		"html-webpack-plugin": "^4.2.0",
		"jest": "^24.9.0",
		"jest-environment-happy-dom": "0.0.36",
		"sass": "^1.26.3",
		"sass-loader": "^8.0.2",
		"webpack": "^4.42.1",
		"webpack-bundle-analyzer": "^3.6.0",
		"webpack-cli": "^3.3.11",
		"webpack-dev-server": "^3.10.3"
	},
	"dependencies": {
		"js-logger": "^1.6.0",
		"lodash": "^4.17.15"
	}
}

{
	"name": "kotchi-ui",
	"version": "1.0.0",
	"description": "UI Kit of native web components",
	"main": "kotchi-ui.js",
	"scripts": {
		"build": "webpack --config webpack.prod.js",
		"build-w-docs": "webpack --config webpack.prod.js && npm run build-docs",
		"build-dev": "webpack --config webpack.dev.js",
		"start": "webpack-dev-server --open --config webpack.dev.js",
		"build-docs": "docs-builder --projectName \"Kotchi UI\" --scriptPath \"dist/kotchi-ui.js\"",
		"prepack": "node .build/prepack.js",
		"postpack": "node .build/postpack.js",
		"test": "jest --env=jest-environment-happy-dom -i"
	},
	"author": "Ahmad Igbariya <ahmad.rida.igbariya@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.7.7",
		"@babel/preset-env": "^7.7.7",
		"@webcomponents/webcomponentsjs": "^2.4.0",
		"babel-jest": "^24.9.0",
		"babel-loader": "^8.0.6",
		"clean-webpack-plugin": "^3.0.0",
		"css-loader": "^3.2.0",
		"css-to-string-loader": "^0.1.3",
		"documentation-builder": "1.0.1",
		"eslint": "^6.7.2",
		"eslint-plugin-node": "^10.0.0",
		"happy-dom": "^0.10.5",
		"html-loader": "^0.5.5",
		"jest": "^24.9.0",
		"jest-environment-happy-dom": "0.0.36",
		"webpack": "^4.39.3",
		"webpack-bundle-analyzer": "^3.6.0",
		"webpack-cli": "^3.3.7",
		"webpack-dev-server": "^3.8.0"
	},
	"dependencies": {
		"lodash": "^4.17.15"
	}
}
